{
  "compilerOptions": {
    "outDir": "./dist/",
    "declaration": true,
    "lib": [
      "es2020"
    ],
    "target": "es2020",
    "module": "es6",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "experimentalDecorators": true
  },
  "include": [
    "./src/**/*.ts",
    "./__tests__/**/*.ts"
  ],
  "exclude": [
    "./node_modules"
  ]
}
